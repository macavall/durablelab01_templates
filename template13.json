{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "subscriptionId": {
            "type": "string",
            "defaultValue": "[subscription().subscriptionId]"
        },
        "name": {
            "type": "string",
            "defaultValue": "[concat('durablelab01', take(uniqueString(resourceGroup().id), 4))]"
        },
        "location": {
            "type": "string",
            "defaultValue": "westus2"
        },
        "use32BitWorkerProcess": {
            "type": "Bool",
            "defaultValue": false
        },
        "ftpsState": {
            "type": "string",
            "defaultValue": "AllAllowed"
        },
        "storageAccountName": {
            "type": "string",
            "defaultValue": "[concat('durablelab01', take(uniqueString(resourceGroup().id), 4))]"
        },
        "linuxFxVersion": {
            "type": "string",
            "defaultValue": "DOTNET-ISOLATED|8.0"
        },
        "sku": {
            "type": "string",
            "defaultValue": "PremiumV3"
        },
        "skuCode": {
            "type": "string",
            "defaultValue": "P1V3"
        },
        "workerSize": {
            "type": "string",
            "defaultValue": "6"
        },
        "workerSizeId": {
            "type": "string",
            "defaultValue": "1"
        },
        "numberOfWorkers": {
            "type": "string",
            "defaultValue": "1"
        },
        "hostingPlanName": {
            "type": "string",
            "defaultValue": "[concat('durablelab01', take(uniqueString(resourceGroup().id), 4))]"
        },
        "serverFarmResourceGroup": {
            "type": "string",
            "defaultValue": "[resourceGroup().name]"
        },
        "alwaysOn": {
            "type": "Bool",
            "defaultValue": true
        }
    },
    "variables": {
        "tempName": "durabletest01"
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2022-03-01",
            "name": "[parameters('name')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Insights/components', parameters('name'))]",
                "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
            ],
            "tags": {
                "SecurityControl": "Ignore",
                "hidden-link: /app-insights-resource-id": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/durablelab01rg/providers/Microsoft.Insights/components/', parameters('name'))]"
            },
            "kind": "functionapp,linux",
            "properties": {
                "name": "[parameters('name')]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~4"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "dotnet-isolated"
                        },
                        {
                            "name": "WEBSITE_RUN_FROM_PACKAGE",
                            "value": "https://github.com/macavall/testflex5601/releases/download/funcv1/20260102173208.zip"
                        },
                        {
                            "name": "WEBSITE_USE_PLACEHOLDER_DOTNETISOLATED",
                            "value": "1"
                        },
                        {
                            "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
                            "value": "[reference(resourceId('Microsoft.Insights/components', parameters('name')), '2015-05-01').connectionString]"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2022-05-01').keys[0].value,';EndpointSuffix=','core.windows.net')]"
                        }
                    ],
                    "cors": {
                        "allowedOrigins": [
                            "https://portal.azure.com"
                        ]
                    },
                    "use32BitWorkerProcess": "[parameters('use32BitWorkerProcess')]",
                    "ftpsState": "[parameters('ftpsState')]",
                    "linuxFxVersion": "[parameters('linuxFxVersion')]",
                    "alwaysOn": "[parameters('alwaysOn')]"
                },
                "clientAffinityEnabled": false,
                "virtualNetworkSubnetId": null,
                "functionsRuntimeAdminIsolationEnabled": false,
                "publicNetworkAccess": "Enabled",
                "httpsOnly": true,
                "serverFarmId": "[concat('/subscriptions/', parameters('subscriptionId'),'/resourcegroups/', parameters('serverFarmResourceGroup'), '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]"
            },
            "resources": [
                {
                    "type": "Microsoft.Web/sites/basicPublishingCredentialsPolicies",
                    "apiVersion": "2022-09-01",
                    "name": "[concat(parameters('name'), '/scm')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', parameters('name'))]"
                    ],
                    "properties": {
                        "allow": false
                    }
                },
                {
                    "type": "Microsoft.Web/sites/basicPublishingCredentialsPolicies",
                    "apiVersion": "2022-09-01",
                    "name": "[concat(parameters('name'), '/ftp')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', parameters('name'))]"
                    ],
                    "properties": {
                        "allow": false
                    }
                }
            ]
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2024-11-01",
            "name": "[parameters('hostingPlanName')]",
            "location": "[parameters('location')]",
            "dependsOn": [],
            "tags": {
                "SecurityControl": "Ignore"
            },
            "sku": {
                "Tier": "[parameters('sku')]",
                "Name": "[parameters('skuCode')]"
            },
            "kind": "linux",
            "properties": {
                "name": "[parameters('hostingPlanName')]",
                "workerSize": "[parameters('workerSize')]",
                "workerSizeId": "[parameters('workerSizeId')]",
                "numberOfWorkers": "[parameters('numberOfWorkers')]",
                "reserved": true,
                "zoneRedundant": false
            }
        },
        {
            "type": "microsoft.insights/components",
            "apiVersion": "2020-02-02-preview",
            "name": "[parameters('name')]",
            "location": "westus2",
            "dependsOn": [],
            "tags": {
                "SecurityControl": "Ignore"
            },
            "properties": {
                "ApplicationId": "[parameters('name')]",
                "Request_Source": "IbizaWebAppExtensionCreate",
                "Flow_Type": "Redfield",
                "Application_Type": "web",
                "WorkspaceResourceId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/DefaultResourceGroup-', parameters('location'), '/providers/Microsoft.OperationalInsights/workspaces/DefaultWorkspace-', subscription().subscriptionId, '-', parameters('location'))]",
                "DisableLocalAuth": false
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2022-05-01",
            "name": "[parameters('storageAccountName')]",
            "location": "[parameters('location')]",
            "dependsOn": [],
            "tags": {
                "SecurityControl": "Ignore"
            },
            "sku": {
                "name": "Standard_LRS"
            },
            "properties": {
                "supportsHttpsTrafficOnly": true,
                "minimumTlsVersion": "TLS1_2",
                "defaultToOAuthAuthentication": true,
                "allowBlobPublicAccess": false,
                "allowSharedKeyAccess": true,
                "publicNetworkAccess": "Enabled"
            }
        }
    ]
}
